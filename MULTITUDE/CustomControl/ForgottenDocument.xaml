<UserControl x:Class="MULTITUDE.CustomControl.ForgottenDocument"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MULTITUDE.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>
    <Grid x:Name="PresentationGrid" MouseEnter="PresentationGrid_MouseEnter" MouseLeave="PresentationGrid_MouseLeave" >
        <TextBlock Text="This is a sample of text flowing effect" Foreground="White" Width="100" />
    </Grid>
</UserControl>
