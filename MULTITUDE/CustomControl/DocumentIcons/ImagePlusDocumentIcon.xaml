<UserControl x:Class="MULTITUDE.CustomControl.DocumentIcons.ImagePlusDocumentIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MULTITUDE.CustomControl.DocumentIcons"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="0"/>
        </Grid.Effect>
        <Image x:Name="DocumentImage" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="UniformToFill">
        </Image>
    </Grid>
</UserControl>
