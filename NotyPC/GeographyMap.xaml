<Window x:Class="NotyPC.GeographyMap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotyPC"
        mc:Ignorable="d"
        Title="GeographyMap" Height="300" Width="300">
    <Canvas x:Name="WorldCanvas">
        <Grid  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
            Margin="0,0,0,0" x:Name="UIGrid" Canvas.Left="0" Canvas.Top="0"
            Width="{Binding ActualWidth, ElementName=WorldCanvas}"
            Height="{Binding ActualHeight, ElementName=WorldCanvas}"/>
    </Canvas>
</Window>
